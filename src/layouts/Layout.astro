---
import { ClientRouter } from 'astro:transitions'
import '../styles/global.css'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charSet='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon.svg'
    />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body className='p-20'>
    <div className='container'>
      <slot />
    </div>
  </body>
</html>

<style>
  html {
    font-family: system-ui, 'Segoe UI', 'Open Sans', 'Helvetica Neue',
      sans-serif;
    background: #13151a;
    color: #fff;
  }
  body {
    display: grid;
    place-content: center;
  }
</style>
